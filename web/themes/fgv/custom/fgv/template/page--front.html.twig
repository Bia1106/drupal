				var aid = $(this).attr("href");
				if($(aid).children('h2').length){
					$offset = $(aid).find('h2').height() + $('#top-menu').height()*2;
					$offset = $offset ;
				} else {
					$offset = 80;
				}
				$('html,body').animate({scrollTop: $(aid).offset().top-$offset},'slow');
			});

			$(".leia-mais").click(function(e) {
