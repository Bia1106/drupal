			jQuery(document).ready(function() {
			    var popup = "{{ imagem_popup }}";

				if ( window.location.href.includes("?page=") === false  && popup.length > 0 ) {
				    setTimeout(function() {
					$('#lightbox > div').html($popup);
					$('#lightbox').addClass('ativo');
				}, 1000);
				}
			});

			$("#fechar").click(function(e) {
				e.preventDefault();
				$('#lightbox').removeClass('ativo video');
				$('#lightbox > div').html('');
			});

