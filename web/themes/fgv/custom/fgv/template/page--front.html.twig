        <script>
            function getOffset( el ) {
                var _x = 0;
                var _y = 0;
                while( el && !isNaN( el.offsetLeft ) && !isNaN( el.offsetTop ) ) {
                    _x += el.offsetLeft - el.scrollLeft;
                    _y += el.offsetTop - el.scrollTop;
                    el = el.offsetParent;
                }
                return { top: _y, left: _x };
            }
        
            window.addEventListener("DOMContentLoaded", () => {
                var ultimasNoticias = document.querySelector("#ultimas-noticias");
                
               if ( window.location.href.includes("?page=") ) {
                   window.scrollTo(0, getOffset(ultimasNoticias).top - 100);
               } 
            });
        </script>
		<script>
            
			$video = '<iframe width="1024" height="580" src="{{ url_video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>';

			$popup = '<img src="{{ imagem_popup }}" alt="">';

			$("#top-menu a.slt").click(function(e) {
